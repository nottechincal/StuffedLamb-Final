# ======================================
# Stuffed Lamb VAPI Ordering System
# Environment Configuration Template
# ======================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================================
# SERVER CONFIGURATION
# ======================================
PORT=8000
HOST=0.0.0.0

# ======================================
# BUSINESS DETAILS
# ======================================
# These override defaults from data/business.json
SHOP_NAME=Stuffed Lamb
SHOP_ADDRESS=210 Broadway, Reservoir VIC 3073
SHOP_TIMEZONE=Australia/Melbourne
# Shop phone number for order notifications
SHOP_ORDER_TO=+61423680596

# ======================================
# TAX CONFIGURATION
# ======================================
# Australian GST (all menu prices include GST)
GST_RATE=0.10

# ======================================
# SESSION CONFIGURATION
# ======================================
# Session timeout in SECONDS (default: 1800 = 30 minutes)
SESSION_TTL=1800
# Maximum concurrent sessions (in-memory mode only, ignored if using Redis)
MAX_SESSIONS=1000

# ======================================
# TWILIO SMS CONFIGURATION (Required for notifications)
# ======================================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
# Outbound caller/SMS number in E.164 (+61…)
TWILIO_FROM=+61400000000

# ======================================
# VAPI CONFIGURATION (Required for voice AI)
# ======================================
# Your VAPI API key from dashboard.vapi.ai
VAPI_API_KEY=your_vapi_api_key_here
# Your VAPI Assistant ID (the AI agent handling calls)
VAPI_ASSISTANT_ID=your_vapi_assistant_id_here
# Your public webhook URL (use ngrok for local testing)
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/webhook

# ======================================
# MENU LINK
# ======================================
# URL sent to customers via SMS
MENU_LINK_URL=https://stuffed-lamb.tuckerfox.com.au/

# ======================================
# REDIS CONFIGURATION (Optional but Recommended for Production)
# ======================================
# For session storage - falls back to in-memory if unavailable
# ⚠️  WARNING: If Redis is not running, server will hang on startup!
# ⚠️  Comment out REDIS_HOST to use in-memory sessions (recommended for local dev)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here

# ======================================
# CORS CONFIGURATION (Optional)
# ======================================
# Allowed origins (use * for dev, specific domains for production)
ALLOWED_ORIGINS=*
